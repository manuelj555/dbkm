<!DOCTYPE html>
<html lang="es">
    <head>
        <title>{{ page_title }}</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="{{ constant('APP_CHARSET') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block css %}
            {{ css('bootstrap/default/css/bootstrap.min') }}
            {{ css('font-awesome.min') }}
            {{ css('style') }}
            {{ css('backend/style') }}
            {% if not constant('APP_LOCAL') %}
                <link href="http://fonts.googleapis.com/css?family=Play:400,700" rel="stylesheet" type="text/css">
            {% endif %}
            <style type="text/css">
                .row-fluid .span4 { font-size: 14px;}
            </style>
        {% endblock css %}
        {{ js('jquery/jquery.min') }}
    </head>
    <body style="padding-top: 40px !important; font-family: Play,Lucila,Verdana,sans-serif;">

        <div class="navbar navbar-fixed-top user-nav">
            <div class="navbar-inner">
                <div class="container">
                    <span class="brand">{{ constant('APP_NAME') }}</span>
                    <div class="pull-right">
                        {{ html_button("sistema/login/entrar/", 'Ingresar', {class:'btn-success'}, 'signin', false) }}
                    </div>
                </div>
            </div>
        </div>

        <div id="dw-shell-load">
            <div id="dw-shell-content" class="container-fluid">
                {% include "@partials/dw_message.twig" %}
                {% block content %}
                {% endblock content %}
            </div>
        </div>
        {% block javascript %}
        {% endblock javascript %}
    </body>
</html>
