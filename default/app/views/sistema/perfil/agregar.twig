{% extends not is_ajax ? "@templates/backend/default.twig" : "@templates/ajax.twig" %}

{% block content %}
{{ form_open('', 'post', {'id':'form', 'class':'dw-validate'}) }}
    <div class="row-fluid">
        <div class="span6">
            {{ form_text('perfil.perfil', {'class':'input-required mask-alpha show-error'}, null, 'Perfil') }}
        </div>
        <div class="span6">
            {{ form_text('perfil.plantilla', {'class':'mask-alphanum show-error'}, null, 'Plantilla', 'La plantilla de sebe ubicar dentro la caperta "templates".') }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="form-actions">
            {{ dw.submit('Guardar perfil') }}
            {{ dw.reset() }}
            {{ dw.link_cancel('sistema/perfil/listar/') }}
        </div>
    </div>
    {% block extra_fields '' %}
{{ form_close() }}
{% endblock content %}