{% extends not is_ajax ? "@templates/backend/default.twig" : "@templates/ajax.twig" %}

{% block content %}
    {{ form_open(null, 'post', {id:'form',class:'dw-validate'}) }}
        <div class="row-fluid">
            <div class="span6">
                {{ form_date('audit', {class:'input-required mask-date input-date show-errors'}, date()|date("Y-m-d"), 'Día') }}
            </div>
        </div>
        <div class="row-fluid">
            <div class="form-actions">
                {{ DwButton_submit('Listar auditorías', 'check', null, 'mostrar') }}
                {{ DwButton_cancel() }}
            </div>
        </div>
    {{ form_close() }}
{% endblock content %}