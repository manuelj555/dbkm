{% extends not is_ajax ? "@templates/backend/default.twig" : "@templates/ajax.twig" %}

{% block content %}
    <div class="dw-overflow">

        {{ form_open('', 'post', {'id':'form', 'class':'dw-validate'})}}

        <div class="row-fluid">
            <div class="span12">
                {{ form_textarea('estado_usuario.descripcion', {'class':'input-xxlarge input-required mask-text show-error'}, null, 'Motivo del cambio de estado')}}
            </div>
        </div>

        <div class="row-fluid">
            <div class="form-actions">
                {{ DwButton_save('Actualizar estado')}}
                {{ DwButton_reset('form')}}
                {{ DwButton_cancel()}}
            </div>
        </div>

        {{ form_close()}}

    </div>
{% endblock %}
